<h1>Books</h1>

<%= link_to "New Book", new_book_path %>

<table>
    <thead>
        <tr>
        <th>isbn</th>
        <th>name</th>
        <th>action</th>
    </tr>
    </thead>
    <tbody>
        <% @books.each do |book| %>
            <tr>
                <td> <%= book.isbn %> </td>
                <td> <%= book.name %> </td>
                <td> 
                    <%= link_to "view", book %> 
                    <%= link_to "edit", edit_book_path(book) %>
                    <%= link_to "Destroy", book_path(book), data:{
                            turbo_method: :delete,
                            turbo_confirm: "Are you sure?"
                        } %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>